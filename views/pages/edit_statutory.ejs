<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="conatiner">
                        <div class="col bg-light shadow-sm breadcrumb-height my-2">
                            <p class="text-muted text-left ms-3 py-3 align-items-center d-flex flex-wrap">
                                <a href="/api/v2/index/dashboard">Dashboard</a>>>
                                <a href="/api/v2/statutories/Statutory">Statutory Fees</a>>>
                                <a href="/api/v2/statutories/<%=  singleStatutory.name%>">Editing <%=  singleStatutory.name%></a>
                            </p>
                        </div>
                    </div>

                    <div class="container py-3 mt-2 shadow custonm-bg">
                        <form action="/api/v2/statutories/add_new_statutory/<%= singleStatutory.id%>?_method=PUT" method="post"
                            class="m-5 p-4 shadow bg-white form-detail">

                            <%- include('../partials/flash_messages') %>

                                <div class="row">
                                    <div class="col">
                                        <div>
                                            <label for="username">Statutory Name*</label>
                                            <input type="text" name="name" placeholder="Eg. Development Fee"
                                                value="<%=  singleStatutory.name%>"
                                                class="form-control">
                                        </div>
                                    </div>
                                   
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div>
                                            <label for="username">Description*</label>
                                            <textarea name="description" id="description" cols="100%" rows="5%">
                                             <%- singleStatutory.description %>
                                         </textarea>
                                        </div>
                                    </div>

                                </div>



                                <div class="col">
                                    <button type="submit"
                                        class="btn btn-outline-secondary-button w-100 mt-4 py-2">Submit</button>
                                </div>


                        </form>
                    </div>



                </main>



        </div>
        <script>
            CKEDITOR.replace("description", {
                Plugins: "wysiwygarea, toolbar, basicstyles, link",
            });

        </script>


        </body>

        </html>