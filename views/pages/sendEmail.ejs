<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="container">

                        <div class="row">
                            <div class="col-sm-6 mx-auto mt-5">
                               
                                 <form action="/sendEmail" method="POST">
                                 <%- include('../partials/flash_messages') %>
                                    <h4 class="text-center">SEND BULK EMAIL</h4>
                                    <div class="form-group my-2">
                                      <label for="Subject">Subject *</label>
                                       <input type="text" class="form-control" name="subject" placeholder="Subject" required>
                                    </div>

                                    <div class="form-group my-2">
                                        <label for="Img">Insert Image Embed (Embed Image here)</label>
                                        <textarea name="imageEmbed" class="form-control" rows="2"></textarea>
                                    </div>
                                    <div class="form-group my-2">
                                        <label for="Img">Message</label>
                                        <textarea name="message" id="message" class="form-control" rows="2"></textarea>
                                    </div>

                                    <div class="btns-auth">
                                        <a href="/api/v2/customers/customers/1" class="auth-btn  btn-warning-auth">Cancel </a>
                                        <button type="submit" class="auth-btn  btn-outline-auth">Broadcast</button>
                                        
                                    </div>
                                 </form>

                            </div>
                        </div>
                           
                    </div>



                </main>



        </div>

        <script>
            CKEDITOR.replace("message", {
                Plugins: "wysiwygarea, toolbar, basicstyles, link",
            });

        </script>


        </body>

        </html>