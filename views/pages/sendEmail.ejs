                    <div class="container">

                        <div class="row">
                            <div class="col-sm-6 mx-auto mt-5">
                               
                                 <form action="/sendEmail" method="POST">
                                 <%- include('../partials/flash_messages') %>
                                    <h4 class="text-center">SEND BULK EMAIL</h4>
                                    <div class="form-group my-2">
