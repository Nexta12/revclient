<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="conatiner">
                        <div class="col bg-light shadow-sm breadcrumb-height my-2">
                            <p class="text-muted text-left ms-3 py-3 align-items-center d-flex flex-wrap">
                                <a href="/api/v2/index/dashboard">Dashboard</a>>>
                                <a href="/api/v2/customers/customers">Customer</a>>>
                                <a href="/api/v2/customers/add_new_customer">Add New</a>
                            </p>
                        </div>
                    </div>

                    

                   <div class="container py-3 mt-2">
                    <form action="/api/v2/customers/add_new_customer" method="POST" class="shadow bg-white form-detail">
                        <%- include('../partials/flash_messages') %>
                       <!-- Start -->

                        <h4 class="text-center text-muted fw-5">Register A Customer </h4>
                        
                        <div class="row">
                            <div class="col-lg-3 text-center">
                                
                                <img id="profileImage" src="/img/man.png" alt="photo" width="120" height="120"
                                    class="rounded-circle bg-secondary profileImage">
                        
                                <input id="imageUploadBtn" type="file" name="profilePic"
                                    accept="image/jpeg, image/png, image/jpg, image/svg+xml" class="imageUploadBtn d-none" disabled>
                        
                                <p>Image Upload disabled</p>
                        
                            </div>
                        
                            <div class="col-lg-9">
                                <div class="row">
                                    <div class="col-sm-6 col-md-4 col-lg-4 ">
                                        <p><label for="username">Username*</label></p>
                                        <p>
                                            <input type="text" class="form-control" name="username" value="<%= typeof username != 'undefined' ? username : '' %>">
                                        </p>
                                    </div>
                                    <div class="col-sm-6 col-md-4 col-lg-4 ">
                                        <p> <label for="email">Email*</label></p>
                                        <p>
                                        <p>
                                            <input type="email" class="form-control" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                                        </p>
                                        </p>
                                    </div>
                                    <div class="col-sm-6 col-md-4 col-lg-4 ">
                                        <p> <label for="password">Password*</label></p>
                                        <p>
                                        <p>
                                            <input type="password" class="form-control" name="password"
                                                value="<%= typeof password != 'undefined' ? password : '' %>">
                                        </p>
                                        </p>
                                    </div>
                                   
                                </div>
                        
                        
                                <div class="row">
                                    <div class="col">
                                        <p> <label for="firstname">Full Name*</label></p>
                                        <p>
                                            <input type="text" class="form-control" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <p> <label for="firstname">Address*</label></p>
                                        <p>
                                        <input type="text" class="form-control" name="address" value="<%= typeof address != 'undefined' ? address : '' %>">
                                        </p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p><label for="lastname">Phone Number</label></p>
                                        <p>
                                        <input type="number" id="phone" class="form-control" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                                        </p>
                                    </div>
                                </div>
                                   
                                <h4 class="text-center text-muted fw-5"> Next of Kin Details </h4>
                                <div class="row">
                                    <div class="col-sm-6 col-md-4 col-lg-3 ">
                                        <p> <label for="firstname">Next of Kin</label></p>
                                        <p>
                                        <input type="text" class="form-control" name="nameOfKin"
                                            value="<%= typeof nameOfKin != 'undefined' ? nameOfKin : '' %>">
                                        </p>
                                    </div>
                                    <div class="col-sm-6 col-md-4 col-lg-3 ">
                                        <p><label for="lastname">Email</label></p>
                                        <p>
                                        <input type="email" class="form-control" name="emailOfKin"
                                            value="<%= typeof emailOfKin != 'undefined' ? emailOfKin : '' %>">
                                        </p>
                                    </div>
                                    <div class="col-sm-6 col-md-4 col-lg-3  duplT flatT">
                                        <p> <label for="othernames">Address</label></p>
                                        <p>
                                        <input type="kinAddress" class="form-control" name="kinAddress"
                                            value="<%= typeof kinAddress != 'undefined' ? kinAddress : '' %>">
                                        </p>
                                    </div>
                                    <div class="col-sm-6 col-md-4 col-lg-3 ">
                                        <p> <label for="phoneOfKin">Phone</label></p>
                                        <p>
                                            <input type="text" name="phoneOfKin" value="<%= typeof phoneOfKin != 'undefined' ? phoneOfKin : '' %>"
                                                class="form-control">
                                        </p>
                                    </div>
                                </div>
                        
                    
                                
                            </div>

                            <div class="d-flex py-4">
                                
                             <a href="/api/v2/customers/customers" class="btn btn-warning w-50 me-2">Cancel</a>
                               
                             <button type="submit" class="btn btn-outline-secondary-button w-50 ms-2">Submit</button>
                            
                            </div>
                        
                        </div>
                       <!-- Stop -->
                  

                    </form>
                   </div>



                </main>



        </div>


        </body>

        </html>