<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="conatiner">
                        <div class="col bg-light shadow-sm breadcrumb-height my-2">
                            <p class="text-muted text-left ms-3 py-3 align-items-center d-flex flex-wrap">
                                <a href="/api/v2/index/dashboard">Dashboard</a>>>
                                <a href="/api/v2/customers/<%= propertyOwner.id %>" class="text-capitalize"> 
                                    <%= propertyOwner.name %>
                                </a>>>
                                <a href="#"> Edit Assigned Property</a>
                            </p>
                        </div>
                    </div>


                    <form action="/api/v2/assign/edit/<%= propertyOwner.id %>/<%=reqProperty.propeId %>/<%= reqProperty.uuid%>?_method=PUT" method="post">
                        <div class="container rounded-3 shadow mx-auto bg-white my-3 p-3">
                            <%- include('../partials/flash_messages') %>

                                <p class="text-center lead mb-2 text-revplus text-capitalize">You're Editing:

                                    <label for="properties">
                                        <%= reqProperty.name %>
                                    </label>
                                    <input type="checkbox" name="name" value="<%= propertyOwner.name %>" checked
                                        class="d-none">
                                    assigned to <%= propertyOwner.name %>
                                </p>
   
                                <div class="row">
                                    <div class="col-lg-3 text-center">
                                        <p>Property Image</p>

                                        <img id="profileImage" src="/img/uploads/<%= reqProperty.image %>" alt="photo" width="120"
                                            height="120" class="rounded-circle bg-secondary profileImage">

                                        <input id="imageUploadBtn" type="file" name="image"
                                            accept="image/jpeg, image/png, image/jpg, image/svg+xml"
                                            class="imageUploadBtn d-none" disabled>

                                        <p><small>Image upload disabled</small></p>

                                    </div>

                                    <div class="col-lg-9">


                                        <div class="row">
                                            <div class="col-sm-6 col-lg-4">
                                                <p><label for="customer">Choose Customer *</label></p>
                                                <select id="customer" name="id" class="form-select">

                                                    <option value="<%= propertyOwner.id %>" selected>
                                                        <%= propertyOwner.name %>
                                                    </option>

                                                </select>
                                            </div>
                                            <div class="col-sm-6 col-lg-4">
                                                <p><label for="o_branch">Opening branch</label></p>
                                                <p><input type="text" id="o_branch" name="o_branch"
                                                        value="<%=reqProperty.o_branch %>" class="form-control">

                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-lg-4">

                                                <p><label for="date">Date of Purchase</label></p>
                                                <p>
                                                    <input type="text" placeholder="dd/mm/yy" name="p_date"
                                                        value="<%= reqProperty.p_date %>" class="form-control">
                                                </p>

                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6 col-lg-4">
                                                <p><label for="n_plots"> Quantity Purchased * </label></p>
                                                <p>
                                                    <input type="number" placeholder="" name="n_plots" id="n_plots"
                                                        value="<%= reqProperty.n_plots %>" required
                                                        class="form-control">
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-lg-4">
                                                <p><label for="n_plots"> Description </label></p>
                                                <p>
                                                    <input type="text" placeholder="Eg. Units of 3 bedroom" name="detail" id="detail"
                                                        value="<%= reqProperty.detail %>" class="form-control" required>
                                                </p>
                                            </div>

                                            <div class="col-sm-6 col-lg-4 duplT flatT ">
                                                <p><label for="p_p_plot">Price per Each </label></p>
                                                <p><input type="number" placeholder="" name="p_p_plot" id="plotp"
                                                        value="<%= reqProperty.p_p_plot %>" class="form-control">
                                                </p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p><label for="a_p_f_plots">Amount Paid</label></p>
                                                <p>
                                                    <input type="number" placeholder="" name="a_p_f_plots" id="amtpd"
                                                        value="<%= reqProperty.a_p_f_plots %>"
                                                        class="form-control">
                                                </p>
                                            </div>


                                            <div class="col-sm-6 ">
                                                <p><label for="p_purchase">Purpose of Purchase</label></p>
                                                <p>
                                                    <select name="p_purchase" class="form-select">

                                                        <option value="Residential" <%=reqProperty.p_purchase=='Residential' ? 'selected' :'' %>>Residential</option>
                                                        <option value="Commercial" <%=reqProperty.p_purchase=='Commercial' ? 'selected' :'' %>>Commercial</option>
                                                    </select>
                                                </p>
                                                <!-- stop -->







                                            </div>



                                        </div>
                                       

                                    </div>

                                </div>

                        </div>

                        <!-- statutory starts -->
