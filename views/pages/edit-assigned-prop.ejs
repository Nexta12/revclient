                                                        <input type="number" placeholder="" name="legal_paid"
                                                            class="paid form-control"
                                                            value="<%= reqProperty.legal_paid %>">
                                                    </p>
                                                </td>
                                                
                                            </tr>
                                            <!-- single row stops -->
                                            <!-- single Roll starts -->
                                            <tr>

                                                <td>
                                                    <p>
