                            <div class="row">


                                <div class="col table-responsive">

                                    <!-- borderless table starts -->


                                    <table class="table table-borderless equalCells">
                                        <thead>
                                            <tr>

                                                <th>statutory Name</th>
                                                <th>Cost</th>
                                                <th>Amount Paid</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                <td>
