                                                <td>
                                                    <p>
                                                        <input type="text" placeholder="" name="plotNum"
                                                            class="form-control"
                                                            value="<%= reqProperty.plotNum %>">
                                                    </p>
                                                </td>
                                                <td>
                                                    <p>

                                                        <input type="text" placeholder="" name="blockNum"
                                                            class="form-control"
                                                            value="<%= reqProperty.blockNum %>">

