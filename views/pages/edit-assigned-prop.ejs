                        <div class=" form-group modal-footer justify-content-center">
                            <a href="/api/v2/properties/property" class="btn btn-warning">Cancel</a>
                            <button type="submit" class="btn-outline-secondary px-3 py-2 ">Submit</button>
                        </div>

                    </form>
                </main>



        </div>


