                                        </tbody>
                                    </table>

                                    <!-- borderless table stops -->

                                </div>

                            </div>


                        </div>

                        <!-- statutory stops -->

                        <!-- Allocation Starts -->
                        <div class="container rounded-3 shadow mx-auto bg-white my-3 p-3">

                            <div class="row">


                                <div class="col table-responsive">

                                    <!-- borderless table starts -->


                                    <table class="table table-borderless equalCells">
                                        <thead>
                                            <tr>

                                                <th>Allocation</th>
                                                <th>Status</th>
                                                <th>Plot Number</th>
                                                <th>Block Number</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                <td>
                                                    <p>

                                                    </p>
                                                </td>


                                                <td>
                                                    <p>
                                                        <select name="allocation" class="form-select">
                                                            <option value="Allocated"
                                                                <%=reqProperty.allocation=='Allocated'
                                                                ? 'selected' :'' %>>Allocated</option>
                                                            <option value="Refunded"
                                                                <%=reqProperty.allocation=='Refunded'
                                                                ? 'selected' :'' %>>Refunded</option>
                                                            <option value="Pending"
                                                                <%=reqProperty.allocation=='Pending' ? 'selected'
                                                                :'' %>>Pending</option>
                                                            <option value="In Process"
                                                                <%=reqProperty.allocation=='In Process'
                                                                ? 'selected' :'' %>>In Process</option>
                                                        </select>
                                                    </p>
