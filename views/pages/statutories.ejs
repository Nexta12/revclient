<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="conatiner">
                        <div class="col bg-light shadow-sm breadcrumb-height my-2">
                            <p class="text-muted text-left py-3 mx-5 align-items-center d-flex flex-wrap">
                                <a href="/api/v2/index/dashboard">Dashboard</a>>>
                                <a href="/api/v2/statutories/Statutory">Statutory Fees</a>
                            </p>
                        </div>
                    </div>
                        <div class="container mx-auto py-3">
                            <%- include('../partials/flash_messages') %>
                        </div>
                    <div class="conatiner customer-search-header mt-3  bg-white p-3 mx-4 fixed">
                       
                        <div class="c-title">
                            <h5 class="text-capitalize text-center">Statutory Fees</h5>
                        </div>
                        <div class="c-search">
                            <div class="search-wrapper text-center">
                                <input type="text" id="search-box" class="search-box" placeholder="Search Statutories">
                                <!-- <span class="las la-search"></span> -->
                            </div>
                        </div>
                        <div class="c-add-new text-center">
                            <a href="/api/v2/statutories/add_new_statutory" class="btn btn-outline-secondary-button w-50 py-2"> <i
                                    class="las la-plus"></i> Add
                                New</a>
                        </div>
                    </div>

                    <!-- customers table list -->


                    <section class="table ">
                        <div class="row py-3 mx-3">
                            <div class="col overflow-auto mb-3">
                                <table class="table bg-white table-stri">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Statutory Type</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% statutories.forEach((Statutory, index)=>{ %>
                                            <tr>
                                                <td><%= index + 1%></td>
                                                <td><%=Statutory.name.toUpperCase() %></td>
                                                <td class="w-50 text-left"><%- Statutory.description %></td>
                                                <td class="d-flex justify-content-start">
                                                    <a href="/api/v2/statutories/<%= Statutory.id %>"><i class="las la-edit mx-2 la-2x-size"></i></a>
                                                    <form action="/api/v2/statutories/delete/<%= Statutory.id %>?_method=DELETE" method="POST">
                                                        <a class="deletConfirm"><i class="las la-trash mx-2 la-2x-size"></i></a>
                                                        <input type="submit" value="delete" class="d-none " id="deleteInput">
                                                    </form>
                                                   
                                                </td>
                                            </tr>

                                       <% }) %>
                                       
                                    </tbody>
                                </table>
                            </div>


                        </div>

                    </section>


                </main>



        </div>


        </body>

        </html>