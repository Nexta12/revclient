<%- include('../partials/_header') %>
    <%- include('../partials/_sidebar') %>
        <div class="main-content">

            <%- include('../partials/_main_content_header') %>

                <main>
                    <div class="conatiner">
                        <div class="col bg-light shadow-sm breadcrumb-height my-2">
                            <p class="text-muted text-left ms-3 py-3 align-items-center d-flex flex-wrap">
                                <a href="/api/v2/index/dashboard">Dashboard</a>>>
                                <a href="/api/v2/users/staff">Staff List</a>>>
                                <a href="/api/v2/users/add_new_staff">Add New</a>
                            </p>
                        </div>
                    </div>

                    <div class="container rounded-3 shadow mx-auto bg-white my-5 p-3">


                        <form action="/api/v2/users/add_new_staff" method="POST" class="text-dark " enctype="multipart/form-data">
                            <%- include('../partials/flash_messages') %>
                                <h4 class="text-center text-muted fw-5">Register A Staff </h4>

                                <div class="row">
                                    <div class="col-lg-3 text-center">
                                        <p>Profile Picture </p>

                                        <img id="profileImage" src="/img/man.png" alt="photo" width="200"
                                            height="200" class="rounded-circle bg-secondary profileImage">

                                        <input id="imageUploadBtn" type="file" name="profilePic"
                                            accept="image/jpeg, image/png, image/jpg, image/svg+xml"
                                            class="imageUploadBtn d-none">

                                        <p>upload image</p>

                                    </div>

                                    <div class="col-lg-9">
                                        <div class="row">
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p><label for="username">Username*</label></p>
                                                <p>
                                                    <input type="text" name="username"
                                                        value="<%= typeof username != 'undefined'? username: '' %>"
                                                        placeholder="UserName" class="form-control" required>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="email">Email*</label></p>
                                                <p>
                                                <p>
                                                    <input type="email" name="email"
                                                        value="<%= typeof email != 'undefined' ? email : '' %>"
                                                        class="form-control" placeholder="Email" required>
                                                </p>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="password">Password*</label></p>
                                                <p>
                                                <p>
                                                    <input type="password" name="password"
                                                        value="<%= typeof password != 'undefined' ? password : '' %>"
                                                        class="form-control" placeholder="password">
                                                </p>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="password2">Confirm Password</label></p>
                                                <input type="password" name="password2"
                                                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                                                    class="form-control" placeholder="">

                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="firstname">First Name*</label></p>
                                                <p>
                                                    <input type="text" name="firstname"
                                                        value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
                                                        class="form-control" placeholder="First Name" required>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p><label for="lastname">Last Name</label></p>
                                                <p>
                                                    <input type="text" name="lastname"
                                                        value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
                                                        class="form-control" placeholder="Last Name">
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3  duplT flatT">
                                                <p> <label for="othernames">Other Names</label></p>
                                                <p>
                                                    <input type="text"
                                                        value="<%= typeof othernames != 'undefined' ? othernames : '' %>"
                                                        name="othernames" class="form-control"
                                                        placeholder="Other Names">
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="phone">Phone</label></p>
                                                <p>
                                                    <input type="text" name="phone"
                                                        value="<%= typeof phone != 'undefined' ? phone : '' %>"
                                                        class="form-control">
                                                </p>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="department">Department</label></p>
                                                <p>
                                                    <select name="dept" class="form-select">
                                                        <option value="" disabled selected>Choose Option</option>
                                                        <option value="ED">Executive Director</option>
                                                        <option value="MD">Managing Director</option>
                                                        <option value="HR">Human Resources</option>
                                                        <option value="Marketing">Marketer</option>
                                                        <option value="IT Department">IT Dept</option>
                                                        <option value="Accounts">Accounts</option>
                                                        <option value="Customer Care">Customer Care</option>
                                                        <option value="Logistics">Logistics</option>
                                                        <option value="Others">Budget & Planning</option>
                                                    </select>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p><label for="position">Position</label></p>
                                                <div>
                                                    <input type="text" name="position"
                                                        value="<%= typeof position != 'undefined' ? position : '' %>"
                                                        placeholder="Eg. Head of Marketing" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3  duplT flatT">
                                                <p> <label for="branch">Branch</label></p>
                                                <p>
                                                    <select name="branch" class="form-select">
                                                        <option value="Lekki">Lekki</option>
                                                        <option value="Ikeja">Ikeja</option>
                                                        <option value="Abuja">Abuja</option>
                                                        <option value="Ibadan">Ibadan</option>
                                                        <option value="Port Harcourt">portHarcourt</option>
                                                    </select>
                                                </p>
                                            </div>
                                            <div class="col-sm-6 col-md-4 col-lg-3 ">
                                                <p> <label for="role">Register As*</label></p>
                                                <p>
                                                    <select name="role" class="form-select" required>
                                                        <option>Choose Option </option>
                                                        <option value="Admin">Admin</option>
                                                        <option value="Staff">Staff</option>
                                                    </select>
                                                </p>
                                            </div>
                                        </div>

                                        <div class="d-flex py-4">
                                        
                                            <a href="/api/v2/users/staff" class="btn btn-warning w-50 me-2">Cancel</a>
                                        
                                            <button type="submit" class="btn btn-outline-secondary-button w-50 ms-2">Submit</button>
                                        
                                        </div>

                                    </div>

                                </div>

                        </form>




                    </div>



                </main>



        </div>


        </body>

        </html>